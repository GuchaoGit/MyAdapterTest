<?xml version="1.0" encoding="utf-8"?>
<com.haibin.calendarview.CalendarLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:calendar_content_view_id="@+id/recyclerView"
    app:calendar_show_mode="both_month_week_view"
    app:default_status="shrink">

    <RelativeLayout
        android:layout_width="match_parent"
        android:padding="@dimen/dimen_10dp"
        android:layout_height="50dp">
        <TextView
            android:id="@+id/tv_cur_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="当前日期"/>
        <TextView
            android:id="@+id/tv_go_back"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ff2d2d"
            android:text="今天"/>
    </RelativeLayout>
    <com.haibin.calendarview.CalendarView
        android:id="@+id/calendarView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:baselineAligned="false"
        app:calendar_height="50dp"
        app:current_month_lunar_text_color="#CFCFCF"
        app:current_month_text_color="#333333"
        app:min_year="2004"
        app:month_view="com.guc.myadptertest.widget.calendar.meizu.MeizuMonthView"
        app:week_view="com.guc.myadptertest.widget.calendar.meizu.MeizuWeekView"
        app:month_view_show_mode="mode_only_current"
        app:other_month_text_color="#e1e1e1"
        app:scheme_text="假"
        app:scheme_text_color="#333"
        app:scheme_theme_color="#333"
        app:selected_text_color="#fff"
        app:selected_theme_color="#333"
        app:week_background="#fff"
        app:week_start_with="sun"
        app:week_text_color="#111"
        app:year_view_day_text_color="#111"
        app:year_view_scheme_color="#ff2d2d"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#d4d4d4" />
</com.haibin.calendarview.CalendarLayout>