<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/dimen_10dp"
        tools:context=".MainActivity">

        <TextView
            android:id="@+id/tv_array_adapter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="50dp"
            android:text="ArrayAdapter"/>
        <TextView
            android:id="@+id/tv_simple_adapter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="50dp"
            android:text="SimpleAdapter"/>
        <TextView
            android:id="@+id/tv_page_adapter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="50dp"
            android:text="PageAdapter"/>
        <TextView
            android:id="@+id/tv_card_adapter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="50dp"
            android:text="CardAdapter"/>
        <TextView
            android:id="@+id/tv_swipe_cardview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="50dp"
            android:text="SwipeCardView"/>
        <TextView
            android:id="@+id/tv_test_calendar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="50dp"
            android:text="日历（Calendar）"/>
        <TextView
            android:id="@+id/tv_test_calendar_meizu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="50dp"
            android:text="魅族风格日历（Calendar）"/>
        <TextView
            android:id="@+id/tv_test_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="50dp"
            android:text="RecyclerView添加header"/>
        <TextView
            android:id="@+id/tv_test_group_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="50dp"
            android:text="RecyclerView带分组功能"/>
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>
